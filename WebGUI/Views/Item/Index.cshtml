@using DTO.Models
@model List<Item>
@{
    //Layout = "~/Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="inventorypage">
        <div class="itemarea">
            <table>
                @{
                    foreach (Item it in Model)
                    {
                        <tr id="@it.ID"  onclick="updateEditDiv(@it.ID)">
                                            <td style="width:55px">
                                                <img src="~/Content/Images/@it.ImgURL" alt="Image Not Found" width="50" height="50" />
                                            </td>
                            <td style="font-weight:700">
                                @it.Name
                            </td>
                    </tr>
                }
                }
                </table>
            </div>
        <div class="editarea" id="EditDiv">
            Click on an image to edit the item.
        </div>
    </div>

    <script>
        function updateEditDiv(id) {
            $.ajax({
                url: '/Item/UpdateItem/' + id,
                type: 'GET',
                success: function (result) {
                    $('#EditDiv').html(result);
                    let rowID = id;
                    $(`#${rowID}`).css("border", "2px solid red");
                    
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
    </script>
    <style>
        .inventorypage {
            display:grid;
            grid-template-columns:1fr 1fr;
            grid-template-areas: "itemarea editarea";
            grid-auto-rows:auto;
            padding: 10px;
            height: 70vh;
            position:fixed;
            width:90%
        }

        .itemarea{
            grid-area:itemarea;
            border: 2px solid black;
            text-align: left;
            padding:10px;
            overflow:auto;
        }

        .editarea {
            grid-area: editarea;
            border: 2px solid black;
            text-align: left;
            padding: 10px;
            overflow: hidden;
        }

        table, tr{
            border: 2px solid grey
        }
    </style>
</body>
</html>
