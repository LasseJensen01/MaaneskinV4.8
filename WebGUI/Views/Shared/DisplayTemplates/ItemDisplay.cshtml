@model DTO.Models.Item

<div class="item-container">
    <a href="javascript:void(0);" onclick="showNumpad(@Model.ID)">
        <img src="@Model.ImgURL" alt="@Model.Name" class="item-image" />
    </a>
    <div class="item-details">
        <span class="item-name">@Model.Name: </span>
        <span class="item-price">@Model.Price kr.</span>
    </div>
</div>

<script>
