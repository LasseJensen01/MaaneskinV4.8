@model DTO.Models.Item

<div class="item-container">
    <a href="@Url.Action("AddItemToOrder", "Sale", new { itemId = Model.ID })">
        <img src="~/Content/Images/@Model.ImgURL" alt="@Model.Name" class="item-image" />
        <div class="item-details">
            <div class="item-name">@Model.Name: </div>
            <br />
            <div class="item-price">@Model.Price kr.</div>
        </div>
    </a>
</div>

<style>
    /* Basic styling for the template */
    .item-container {
        text-align: center;
        margin: 10px;
        cursor: pointer;
        border: 2px solid black;
        width:110px;
        height: 190px;
    }

    .item-image {
        width: 100px; /* Set appropriate dimensions */
        height: 100px;
        margin-top:5px;
    }

    .item-details {
        margin: 5px;
    }

    .item-price {
        font-weight: bold;
        color: #333;
        display: inline;
    }

    .item-name {
        color: #666;
        display: inline;
    }

    a {
        text-decoration:none;
    }
</style>
