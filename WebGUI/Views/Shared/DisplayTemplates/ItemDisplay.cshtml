    function showNumpad(itemId) {
        console.log("Clicked on item ID:", itemId);
        // Trigger your numpad or other logic here
    }
</script>

<style>
    /* Basic styling for the template */
    .item-container {
        text-align: center;
        margin: 10px;
        cursor: pointer;
        border: 2px solid black;
        width:110px;
    }

    .item-image {
        width: 100px; /* Set appropriate dimensions */
        height: 100px;
    }

    .item-details {
        margin-top: 5px;
